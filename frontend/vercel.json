{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://social-healthspace3.fly.dev/api/$1"  // Proxy API calls to Fly.io
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"  // SPA fallback (if using React Router)
    }
  ]
}