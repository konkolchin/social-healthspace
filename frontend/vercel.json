{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://social-healthspace3.fly.dev/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"  // Ensure CORS
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200  // Explicit SPA fallback
    }
  ]
}